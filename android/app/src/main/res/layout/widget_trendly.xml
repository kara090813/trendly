<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background_light"
    android:padding="8dp">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔥 실시간 트렌드"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333" />
        
        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:contentDescription="새로고침"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- 키워드 목록 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <!-- 키워드 1 -->
        <LinearLayout
            android:id="@+id/keyword_item_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="4dp">
            
            <TextView
                android:id="@+id/rank_1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF6B6B"
                android:gravity="center" />
            
            <TextView
                android:id="@+id/keyword_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="키워드1"
                android:textSize="12sp"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
        
        <!-- 키워드 2 -->
        <LinearLayout
            android:id="@+id/keyword_item_2"
